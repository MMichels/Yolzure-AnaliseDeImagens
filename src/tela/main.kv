<Principal@BoxLayout>:
    orientation: 'vertical'
    padding: '5px'
    # Barra de endereços
    BoxLayout:
        id: barraEndereco
        size_hint: .8, .1
        pos_hint: {'center_x': .5, 'center_y': .9}
        orientation: 'horizontal'
        padding: 10
        spacing: 5
        Label:
            size_hint: .05, None
            height: 30
            text:'Diretorio: '
        TextInput:
            id: campo_diretorio
            size_hint: .5, None
            height: 30
            multiline: False
        Button:
            size_hint: .08, None
            height: 30
            text: 'Procurar'
            on_press: root.procurar()
    # Area da imagem:
    BoxLayout:
        size_hint: .95, .95
        orientation: 'vertical'
        pos_hint: {'center_x': .5, 'center_y':.5}
        id: box_img
        Image:
            size_hint: 1, 1
            # fundo transparente na imagem.
            source: 'thumbs\\init.jpg'
            id: campo_imagem
        #Botoes de ação da imagem.
        BoxLayout:
            id: box_btns_img
            orientation: 'horizontal'
            size_hint: 1, None
            height: 30
            padding: 2, 2
            pos_hint: {'x': .0, 'center_y':.05}
            Button:
                text: 'Analizar'
                on_press: root.analizar()
            Button:
                text: 'Limpar'
                on_press: root.limpar()
    # Area de resultados:
    BoxLayout:
        orientation: 'horizontal'
        size_hint: .98, .40
        padding: 5, 5
        # Descrição da imagem.
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1., 1.
            id: box_descricao
            spacing: .5
            Label:
                size_hint: .5, .1
                text: "Descricao da imagem:"
                font_size: 18
            Label:
                size_hint: 1, .2
                pos_hint: {'x': .151}
                id: lblDescricao
                valign: 'center'
                halign: 'left'
            Label:
                size_hint: .5, .1
                text: 'Objetos identificados:'
                font_size: 18
            Label:
                size_hint: 1, .6
                pos_hint: {'x': .1}
                valign: 'center'
                halign: 'left'
                id: lblObjetos
                multiline: True
        # Caixa de audio
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Audio descricao'
                font_size: '20'

Principal:
    size_hint: 1., 1.