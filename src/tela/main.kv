<Principal@BoxLayout>:
    orientation: 'vertical'
    padding: '5px'
    size: '1080px', '720px'

    # Barra de endereços
    BoxLayout:
        id: barraEndereco
        size_hint: .8, .1
        pos_hint: {'center_x': .5, 'center_y': .9}
        orientation: 'horizontal'
        padding: 10
        spacing: 5
        Label:
            size_hint: .05, None
            height: 30
            text:'Diretorio: '
        TextInput:
            id: campo_diretorio
            size_hint: .5, None
            height: 30
            multiline: False
        Button:
            size_hint: .08, None
            height: 30
            text: 'Procurar'
            on_press: root.clk_btn_procurar()
        Button:
            id: carregar
            size_hint: .08, None
            height: 30
            text: 'Carregar'
            on_press: root.clk_btn_carregar()
    # Area da imagem:
    BoxLayout:
        size_hint: .95, .95
        orientation: 'vertical'
        # size_hint: 1., 1.
        pos_hint: {'center_x': .5, 'center_y':.5}
        id: box_img
        Image:
            size_hint: 1, 1
            # fundo transparente na imagem.
            color: 1, 1, 1, .0
            id: campo_imagem
        #Botoes de ação da imagem.
        BoxLayout:
            id: box_btns_img
            orientation: 'horizontal'
            size_hint: 1, None
            height: 30
            padding: 2, 2
            pos_hint: {'x': .0, 'center_y':.05}
            Button:
                text: 'Analizar'
                on_press: root.clk_btn_analizar()
            Button:
                text: 'Limpar'
                on_press: root.clk_btn_limpar()
    # Area de resultados:
    BoxLayout:
        orientation: 'horizontal'
        size_hint: .98, .35
        padding: 5, 5
        # Descrição da imagem.
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1., 1.
            id: box_descricao
            spacing: 2
            Label:
                text: "Descricao da imagem:"
                font_size: 18
            Label:
                id: lblDescricao
                text: '...'
            Label:
                text: 'Objetos identificados:'
                font_size: 18
            Label:
                #pos_hint: {'x':.1, 'y':.9}
                id: lblObjetos
                multiline: True
                text: '...'
        # Caixa de audio
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Audio descricao'
                font_size: '20'


Principal:
    size: '1080px', '720px'
    padding: 5, 5
