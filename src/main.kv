<Principal@BoxLayout>:
    orientation: 'vertical'
    padding: '3px'
    # Barra de endereços
    BoxLayout:
        id: barraEndereco
        size_hint: 1, .065
        pos_hint: {'x': .0, 'top': root.top}
        orientation: 'horizontal'
        padding: 10
        spacing: 5
        canvas.before:
            Color:
                rgb: .1, .1, .1
            Rectangle:
                pos: self.pos
                size: root.width, 1
        Label:
            size_hint: .05, None
            height: 30
            text:'Diretorio: '
            color: 0, 0, 0, 1
        TextInput:
            id: campo_diretorio
            size_hint: .5, None
            height: 30
            multiline: False
        Button:
            size_hint: .08, None
            height: 30
            text: 'Procurar'
            background_color: 0, 0, 0, 1
            on_press: root.procurar()
    # Area da imagem:
    BoxLayout:
        size_hint: 1., .6
        orientation: 'vertical'
        id: box_img
        Image:
            height: 450
            pos_hint: {'center_y': .8}
            source: 'thumbs\\init.jpg'
            id: campo_imagem
        # Gambiarra para limitador da imagem
        Label:
            size_hint: 0.01, 0.018
        #Botoes de ação da imagem.
        BoxLayout:
            id: box_btns_img
            orientation: 'horizontal'
            size_hint: 1., None
            height: 30
            spacing: 30
            pos_hint: {'x':.4}
            canvas.before:
                Color:
                    rgb: .1, .1, .1
                Rectangle:
                    pos: 0, self.pos[1] + 38
                    size: root.width, 1

                Rectangle:
                    pos: 0, self.pos[1] - 3
                    size: root.width, 1
            Button:
                size_hint: None, None
                width: 120
                height: 30
                text: 'Analizar'
                background_color: 0, 0, 0, 1
                on_press: root.analizar()
            Button:
                size_hint: None, None
                width: 120
                height: 30
                text: 'Limpar'
                background_color: 0, 0, 0, 1
                on_press: root.limpar()
    # Area de resultados:
    BoxLayout:
        orientation: 'horizontal'
        size_hint: .98, .2
        padding: 5, 5
        canvas.before:
            Color:
                rgb: .1, .1, .1
            Rectangle:
                pos: self.center_x, self.pos[1]-4
                size: 1, self.height+2
        # Descrição da imagem.
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1., 1.
            id: box_descricao
            Label:
                pos_hint: {'center_x': 0.15}
                text: "Descricao da imagem:"
                font_size: 18
                color: 0, 0, 0, 1
            Label:
                id: lblDescricao
                text: 'Frase de teste'
                valign: 'center'
                halign: 'left'
                color: 0, 0, 0, 1
                canvas.before:
                    Color:
                        rgb: .1, .1, .1
                    Rectangle:
                        pos: 0, self.pos[1] + 3
                        size: root.width/2 - dp(15), 1
            Label:
                pos_hint: {'center_x': 0.146}
                text: 'Objetos identificados:'
                font_size: 18
                color: 0, 0, 0, 1
            Label:
                size_hint: 1, .6
                pos_hint: {'x': .1}
                valign: 'center'
                halign: 'left'
                id: lblObjetos
                multiline: True
                color: 0, 0, 0, 1
        # Caixa de audio
        BoxLayout:
            orientation: 'vertical'
            Label:
                size_hint: 1, .3
                pos_hint: {'center_x': .5}
                text: 'Audio descricao'
                font_size: '20'
                color: 0, 0, 0, 1
            Label:
                size_hint: 1, .7
                text: 'Player aqui'

Principal:
    size_hint: 1., 1.